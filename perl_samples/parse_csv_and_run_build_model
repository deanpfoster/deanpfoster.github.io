#!/bin/sh

touch 'parse csv was here'

dos2unix < data > data.unix
../../csv_parser --input-file=data.unix --output-file=model > csv_parse_output 2> /dev/null


../../build_model --input-file=model --output-path=log/ -r $1  > latest_pretty 2> /dev/null

# clean out Singular's from file
mv log/progress.csv log/progress.csv_tmp
cat log/progress.csv_tmp | sed -es/Singular// > log/progress.csv
rm log/progress.csv_tmp

# build the graph
cp ../../*js .

#../../gnuplot ../../progress_report.gnuplot
../../gnuplot ../../progress_report.gnuplot_gif
#../../gnuplot ../../progress_report.gnuplot_html



